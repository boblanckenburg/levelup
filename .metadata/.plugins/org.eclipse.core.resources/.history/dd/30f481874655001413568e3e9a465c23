<?php
	echo "test";
	
	$index_file = "index.html";
	$content_file = $_GET["page"] . ".html";
	$name = "Jos van Egmond";
	
	$site = file_get_contents( $index_file );
	$content = file_get_contents( $content_file );
	
	$site = str_replace( "{content}", $content, $site );
	$site = str_replace( "{name}", $name, $site );
	
	echo $site;
?>